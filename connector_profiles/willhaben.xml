<?xml version="1.0" encoding="utf-8"?>

<profile>
	<name>Willhaben</name>
	<website>
		<baseUrl>http://www.willhaben.at/</baseUrl>
		<adDefinition>
			<regex>(even|odd) clearfix.*?id=\&quot;(?P&lt;id&gt;[0-9]+).*?&lt;a href=\&quot;(?P&lt;url&gt;[^\&quot;]+).*?&gt;(?P&lt;title&gt;[^&lt;]+).*?class=\&quot;price.*?(?P&lt;price&gt;[0-9]+,[0-9]{2}).*?class=\&quot;description.*?&gt;(?P&lt;description&gt;.+?)&lt;a.*?class=\&quot;date-time.*?&gt;(?P&lt;datetime&gt;[^&lt;]+)</regex>
			<tag type="text">dummy</tag>
			<tag type="integer">id</tag>
			<tag type="url">url</tag>
			<tag type="text">title</tag>
			<tag type="float">price</tag>
			<tag type="text">description</tag>
			<tag type="text">datetime</tag>
			<keyTag>
				<tagName>id</tagName>
			</keyTag>
			<timeTag>
				<tagName>datetime</tagName>
				<format>%d.%m.%Y %H:%M</format>
			</timeTag>
		</adDefinition>
		<format>
			<regex type="filter">(\r|\t|\n| {2,})</regex>
		</format>
		<pageParam method="GET" init="1">page</pageParam>
	</website>
	<notification>
		<email type="html">
			<from>Willhaben &lt;contact@willhaben.com&gt;</from>
			<subject>{title} for {price}</subject>
			<body>
				I found a new ad ({datetime}):<br/><br/>
				<b>{title}</b><br/>
				for € <b>{price}</b><br/><br/>
				<a href="{url}">{url}</a><br/><br/>
				bye!
			</body>
		</email>
		<desktop>
			<title>Found an Ad!</title>
			<body>{title} for € {price}</body>
			<url>{url}</url>
		</desktop>
	</notification>
</profile>