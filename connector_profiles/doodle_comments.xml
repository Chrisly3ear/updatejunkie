<?xml version="1.0" encoding="utf-8"?>

<Profile xmlns="http://marvelous.at/2013/WillhabenProfile"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://marvelous.at/2013/WillhabenProfile profile.xsd">

	<Name>DoodleComments</Name>
	<Website>
		<BaseUrl>http://doodle.com/</BaseUrl>
		<AdDefinition>
			<Regex>"id":([0-9]+?),"commentator":"(.+?)","commentHTML":"(.+?)",(?:"emailHash":".{32}",)?"commentedDateTime":"([0-9/AMP :]+?)"</Regex>
			<AdTag type="integer">id</AdTag>
			<AdTag type="text">name</AdTag>
			<AdTag type="text">comment</AdTag>
			<AdTag type="text">datetime</AdTag>
			<KeyTag>
				<TagName>id</TagName>
			</KeyTag>
			<TimeTag>
				<TagName>datetime</TagName>
				<DateTimeFormat>%m/%d/%y %I:%M %p</DateTimeFormat>
			</TimeTag>
		</AdDefinition>
		<HtmlFormat>
			<FormatRegex type="filter">(\r|\t|\n| {2,})</FormatRegex>
		</HtmlFormat>
	</Website>
	<Notifications>
		<Email>
			<ContentType>text/html</ContentType>
			<From>Doodle Comment &lt;contact@doodle.com&gt;</From>
			<Subject>{name} wrote at {datetime}</Subject>
			<Body>
				{comment}<br/><br/>
				<a href="{listingUrl}">{listingUrl}</a>
			</Body>
		</Email>
	</Notifications>
</Profile>